    <!--创建sqlSessionFactory-->
        <!--分页插件pagehelper-->
    <!--创建dao MapperScannerConfigurer-->
    <!--创建事务管理器 DataSourceTransactionManager-->
    <!--开启注解式事务生效-->
    <tx:annotation-driven/>


</beans>